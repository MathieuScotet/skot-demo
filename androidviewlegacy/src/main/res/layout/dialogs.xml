<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert"/>
    <Button
        android:id="@+id/btnAlertCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Custom Button"/>
    <Button
        android:id="@+id/btnAlertTwoButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Two Buttons"/>
    <Button
        android:id="@+id/btnSnack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snack"/>
    <Button
        android:id="@+id/btnShowBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show BottomSheet"/>
</LinearLayout>