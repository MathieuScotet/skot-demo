<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tech.skot.demo.androidview">
    <uses-permission android:name="android.permission.VIBRATE" />
    <application>
        <activity
            android:name="tech.skot.demo.BaseActivity"
            android:allowTaskReparenting="true"
            android:taskAffinity="com.sezane.android"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sezane.android.ModaleActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Floating"/>
    </application>
</manifest>